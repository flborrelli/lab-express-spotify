<h2>Albums for {{this.items.0.artists.0.name}}</h2>

<div class="card-container">
    {{#each items}}
    <div class="track-card">
      <div>
        <img src="{{images.0.url}}" alt="" class="album-img">
      </div>
      <div class="info">
        <h4>{{name}}</h4>
        <a href="/tracks/{{id}}" class="view-album">View Tracks</a>
      </div>
    </div>
    {{/each}}
  </div>